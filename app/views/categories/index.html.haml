%h2
  = t('categories')

- @categories.each do |category|
  = image_tag category.icon.url(:thumb)
  = link_to category.label, category
  - if can? :manage, Category
    = link_to t('form.delete'), category, method: 'DELETE', data: { confirm: "#{t('form.sure')}" }
    = link_to t('form.edit'), edit_category_path(category)
  %br

- if can? :manage, Category
  %h3
    = t('add_category')
  = simple_form_for Category.new, :html => {:multipart => true } do |f|
    = f.input :label
    = f.input :icon, as: :file
    = f.button :submit, class: 'btn-info'