%div{id: :vote_block}
  - votes_m = votes_p = votes_m_w = votes_p_w = 0
  - votes.each do |v|
    - if v.vote
      - votes_p += 1
      - if v.weekly
        - votes_p_w += 1
    - else
      - votes_m += 1
      - if v.weekly
        - votes_m_w += 1

  %h4 Weekly

  Votes + :
  = votes_p_w
  <br>
  Votes - :
  = votes_m_w

  %h4 Total

  Votes + :
  = votes_p
  <br>
  Votes - :
  = votes_m

  - if can? :create, Vote
    = simple_form_for Vote.new, remote: true do |f|
      = f.input param_name, input_html: { value: id }, as: :hidden
      = f.input :vote, input_html: { value: true }, as: :hidden
      = f.button :submit, 'Vote +'
    = simple_form_for Vote.new, remote: true do |f|
      = f.input param_name, input_html: { value: id }, as: :hidden
      = f.input :vote, input_html: { value: false }, as: :hidden
      = f.button :submit, 'Vote -'