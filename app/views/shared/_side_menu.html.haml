.col-md-2.side-menu
  %nav
    = link_to t('Home'), root_path, class: (current_page?(root_path) ? 'active' : '')
    = link_to t('Series'), root_path
    = link_to t('Users'), root_path
    = link_to t('Top'), root_path
    .separator
    - if user_signed_in?
      = link_to t('Profile'), edit_user_registration_path, class: (current_page?(edit_user_registration_path) ? 'active' : '')
      = link_to t('my_channel'), channels_path, class: (current_page?(channels_path) ? 'active' : '')
      = link_to t('my_series'), playlists_path, class: (current_page?(playlists_path) ? 'active' : '')
      = link_to t('subscriptions'), subscription_index_path, class: (current_page?(subscription_index_path) ? 'active' : '')
      = link_to t('disconnect'), destroy_user_session_path, method: 'delete'
    - else
      = link_to t('login'), new_user_session_path, class: (current_page?(new_user_session_path) ? 'active' : '')
      = link_to t('subscribe'), new_user_registration_path, class: (current_page?(new_user_registration_path) ? 'active' : '')
    .separator
    .text-center
      %p
        %span.badge
          16
        = t('new_messages')
      %p
        %span.badge
          64
        = t('new_comments')