= render partial: 'messages/menu'

= simple_form_for Message.new do |f|
  - if @user_id
    = f.input :user_id, as: :hidden, input_html: { value: @user_id }
  - else
    = f.input :user_id, as: :string
  = f.input :title
  = f.input :message
  %label.col-lg-2
  = f.button :submit, class: 'btn-info', value: t('general.send')