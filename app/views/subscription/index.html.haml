- content_for :top do
  = render partial: 'shared/slider'

- @likes.each_with_index do |like, i|
  - if i != 0
    .col-md-12.separator

  - if like.user
    %article.col-md-12
      .col-md-4
        = image_tag 'http://www.cakesandbakes.com/beta/teamimages/avatar_profile.png', width: 258, height: 129
      .col-md-8
        .col-md-1
          %span.badge.blue
            16
        .col-md-11
          %h2
            = like.user.user_name
          %p
            = like.user.description
          %p
            = t('general.videos', count: like.user.videos.length)
            %span.view-counter
              = t('general.video_views', count: like.user.get_views)

  - if like.playlist
    %article.col-md-12
      .col-md-4
        = image_tag like.playlist.icon.url(:thumb), class: 'img-responsive'
      .col-md-8
        .col-md-1
          %span.badge.blue
            16
        .col-md-11
          %h2
            = like.playlist.title
          %p
            = like.playlist.description
          %p
            = t('general.videos', count: like.playlist.videos.length)
            %span.view-counter
              = t('general.video_views', count: like.playlist.get_views)
      .col-md-12
        &nbsp;
        %p
          &nbsp;
          #{t('general.featuring')} :
          %button.btn.btn-info.btn-xs{type: 'button'} #{like.playlist.user.user_name}
          - like.playlist.participations.each do |participation|
            %button.btn.btn-info.btn-xs{type: 'button'} #{participation.user.user_name}